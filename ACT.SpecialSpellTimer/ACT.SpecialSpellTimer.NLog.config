<?xml version="1.0" encoding="utf-8" ?>
<nlog
  xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
  autoReload="true"
  throwExceptions="false"
  internalLogLevel="Off">

  <targets>
    <default-wrapper
      xsi:type="BufferingWrapper"
      bufferSize="3000"
      flushTimeout="5000"
      slidingTimeout="true" />

    <target
      name="DefaultLog"
      xsi:type="File"
      layout="${longdate} [${uppercase:${level:padding=-5}}] ${callsite}() ${message} ${exception:format=tostring}"
      fileName="${basedir}/logs/ACT.SpecialSpellTimer.${shortdate}.log"
      encoding="UTF-8"
      archiveFileName="${basedir}/logs/archives/ACT.SpecialSpellTimer.archive{#}.log"
      archiveEvery="Day"
      archiveNumbering="Rolling"
      maxArchiveFiles="7" />

    <target
      name="DefaultLogBuffer"
      xsi:type="MethodCall"
      className="FFXIV.Framework.Common.AppLog, FFXIV.Framework"
      methodName="AppendLog">
      <parameter layout="${longdate}" />
      <parameter layout="${level}" />
      <parameter layout="${message} ${exception:format=tostring}" />
    </target>

    <target
      name="ChatLog"
      xsi:type="File"
      layout="[${longdate}] [${uppercase:${level:padding=-5}}] ${message}"
      fileName="${basedir}/logs/ChatLog.${shortdate}.log"
      encoding="UTF-8" />
  </targets>

  <rules>
    <logger name="DefaultLogger" minlevel="Trace" writeTo="DefaultLog,DefaultLogBuffer" />
    <logger name="ChatLogger"  levels="Trace,Info" writeTo="ChatLog" />
  </rules>
</nlog>
